generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Usuario {
  id           Int     @id @default(autoincrement())
  cpf          String  @unique
  email        String  @unique
  name         String?
  telefone     String?
  escolaridade String?
  imgPerfil    String?
  senha        String?
}

model Eventos {
  id           Int      @id @default(autoincrement())
  nomeEvento   String?
  modalidade   String?
  taxaIncricao String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
